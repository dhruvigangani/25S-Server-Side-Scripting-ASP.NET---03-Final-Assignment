@model ShiftDetail

@{
    ViewData["Title"] = "Shift Detail Details";
}

<h1>Shift Detail Details</h1>

<div>
    <h4>Shift Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShiftId)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskDescription)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskStartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskStartTime)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskEndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskEndTime)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskType)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCompleted)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsCompleted)
            {
                <span class="badge bg-success">Completed</span>
            }
            else
            {
                <span class="badge bg-warning">Pending</span>
            }
        </dd>
        
        @if (Model.Shift != null)
        {
            <dt class="col-sm-2">
                Related Shift
            </dt>
            <dd class="col-sm-10">
                <strong>Start:</strong> @Model.Shift.StartTime.ToString("g") | 
                <strong>End:</strong> @Model.Shift.EndTime.ToString("g")
            </dd>
        }
    </dl>
</div>

<div>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <text> | </text>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
