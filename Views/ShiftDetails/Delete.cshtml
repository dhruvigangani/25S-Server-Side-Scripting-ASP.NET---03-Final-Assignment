@model ShiftDetail

@{
    ViewData["Title"] = "Delete Shift Detail";
}

<h1>Delete Shift Detail</h1>

<h3>Are you sure you want to delete this shift detail?</h3>
<div>
    <h4>Shift Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShiftId)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskDescription)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskStartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskStartTime)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskEndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskEndTime)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskType)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCompleted)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsCompleted)
            {
                <span class="badge bg-success">Completed</span>
            }
            else
            {
                <span class="badge bg-warning">Pending</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
